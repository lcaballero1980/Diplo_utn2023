<div class="container" style="margin: 100px 0 ">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la tarea</h4>
            <form action="/admin/principal/modificar" method="post">
                <input type="hidden" value="{{tarea.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{tarea.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{tarea.subtitulo}}">
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{tarea.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{messaje}}</p>
            {{/if}}
        </div>
    </div>

</div>